<h1>Edit course {{course.title}}</h1>

<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input
      name="title"
      id="title"
      type="text"
      class="validate"
      required
      value="{{course.title}}"
    />
    <label for="title">Course title</label>
    <span class="helper-text" data-error="Input title"></span>
  </div>
  <div class="input-field">
    <input
      name="price"
      id="price"
      type="text"
      class="validate"
      required
      min="1"
      value="{{course.price}}"
    />
    <label for="title">Course price</label>
    <span class="helper-text" data-error="Input price"></span>
  </div>
  <div class="input-field">
    <input
      name="image"
      id="image"
      type="text"
      class="validate"
      required
      value="{{course.image}}"
    />
    <label for="image">URL image</label>
    <span class="helper-text" data-error="Input URL image"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}" />

  <button type="submit" class="btn btn-primary">Add course</button>
</form>